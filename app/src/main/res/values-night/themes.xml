<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode (force dark). -->
    <style name="Theme.MyDeviceInfo" parent="Theme.Material3.Dark.NoActionBar"> 
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue_gray_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/dark_gray</item> 
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>